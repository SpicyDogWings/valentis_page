<style scoped>
  .header {
    padding: 10vh 0 10vh 0;
    width: 90%;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    .hearts {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 3rem;

      .heart {
        flex-basis: 3rem;
        height: 100%;
      }

      .heart:first-child {
        transform: rotateZ(310deg);
      }

      .heart:nth-child(2) {
        transform: scale(2) rotateZ(340deg) translateY(-1rem);
      }

      .heart:nth-child(3) {
        transform: rotateZ(30deg);
      }
    }

    h1 {
      width: 100%;
      text-align: center;
      color: var(--fr);
    }

    h1 {
      font-family: "Satoshi-Black", sans-serif;
      font-size: 3.5rem;
    }

    img {
      margin: 2rem 0;
      width: 100%;
      height: 15rem;
      transition: all;
      transition-duration: 150ms;
      &:hover {
        transform: scale(1.2);
        filter: drop-shadow(0.5rem 0.5rem 1rem var(--fr));
      }
      &:active {
        transform: scale(1.1);
        filter: drop-shadow(0.5rem 0.5rem 1rem var(--fr));
      }
    }
  }

  a {
    font-family: "Satoshi-Bold", serif;
    margin-top: 1rem;
    padding: 0.5rem 4rem;
    font-size: 1.7rem;
    color: var(--fr);
    background-color: var(--bg);
    border: 0.2rem solid var(--fr);
    border-radius: 1.5rem;
    box-shadow: 0.5rem 0.5rem 0 var(--fr);
    text-decoration: none;
    transition: all;
    transition-duration: 150ms;

    &:hover {
      cursor: pointer;
      transform: scale(0.95);
    }

    &:active {
      transform: scale(0.9);
    }
  }
</style>
